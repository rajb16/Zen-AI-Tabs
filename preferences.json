[
  {
    "type": "separator",
    "label": "AI Configuration",
    "id": "ai-settings-separator"
  },
  {
    "property": "extensions.zen-ai-tabs.ai_provider",
    "label": "AI Provider",
    "type": "dropdown",
    "value": "number",
    "default": 0,
    "options": [
      {
        "value": 0,
        "label": "Firefox Local AI (Default)"
      },
      {
        "value": 1,
        "label": "Google Gemini"
      }
    ]
  },
  {
    "property": "extensions.zen-ai-tabs.gemini_api_key",
    "label": "Gemini API Key",
    "type": "string",
    "placeholder": "Paste your API Key here",
    "conditions": [
      { "if": { "property": "extensions.zen-ai-tabs.ai_provider", "value": 1 } }
    ]
  },
  {
    "property": "extensions.zen-ai-tabs.gemini_model",
    "label": "Gemini Model",
    "type": "string",
    "default": "gemini-2.0-flash",
    "conditions": [
      { "if": { "property": "extensions.zen-ai-tabs.ai_provider", "value": 1 } }
    ]
  },
  {
    "type": "separator",
    "label": "UI Customization",
    "id": "ui-settings-separator"
  },
  {
    "property": "extensions.zen-ai-tabs.show_labels",
    "label": "Show Button Text Labels (Sort/Clear)",
    "type": "checkbox",
    "default": true
  },
  {
    "property": "extensions.zen-ai-tabs.ui_scale",
    "label": "Button Size",
    "type": "dropdown",
    "value": "number",
    "default": 2,
    "options": [
      { "value": 0, "label": "Compact (14px)" },
      { "value": 1, "label": "Normal (16px)" },
      { "value": 2, "label": "Large (18px)" }
    ]
  },
  {
    "property": "extensions.zen-ai-tabs.line_gap",
    "label": "Separator Line Length (Gap Size)",
    "type": "dropdown",
    "value": "number",
    "default": 40,
    "options": [
      { "value": 40, "label": "Long Line (Small Gap)" },
      { "value": 80, "label": "Standard Line (Medium Gap)" },
      { "value": 120, "label": "Short Line (Large Gap)" }
    ]
  }
]